<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/complete" />

        <TextView
            android:id="@+id/sbyxform_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日设备情况" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_fault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_perforation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_psjcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_yield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_consume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sbyxform_detail_nt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
