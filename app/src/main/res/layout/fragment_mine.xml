<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="tab.Mine">

    <TextView
        style="@style/MmTitleTextSize"
        android:text="我的" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mineName"
                android:text="admin" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mine_todo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/x5">

            <ImageView
                android:id="@+id/todoimg"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:background="@drawable/todoimg" />

            <ImageView style="@style/RightArrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/todoimg"
                android:text="待办事宜" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x1"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="@dimen/x5">

            <ImageView
                android:id="@+id/changepwd"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:background="@drawable/changepwd" />

            <ImageView style="@style/RightArrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/changepwd"
                android:text="修改密码" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_version_check"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x1"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/x5">

            <ImageView
                android:id="@+id/version_check"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:background="@drawable/qlhc" />

            <ImageView style="@style/RightArrow"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/version_check"
                android:text="检查版本"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/version_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x1"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/x5">

            <ImageView
                android:id="@+id/about"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:background="@drawable/about" />

            <ImageView style="@style/RightArrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/about"
                android:text="关于" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mine_cancellation_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x30"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
