<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomebg"
    tools:context="com.example.administrator.conchapp.WelCome">

    <LinearLayout
        android:id="@+id/welcomeImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_weight="1"
            android:src="@drawable/logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeImageView"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_title"
        android:textColor="@color/white"
        android:textSize="@dimen/WelComeTitleSize" />

    <Button
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/btn_splash_shape"
        android:text="Button"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="invisible" />

</RelativeLayout>
